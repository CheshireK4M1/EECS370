    // macOS .json setting
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug P1_a",
            "program": "${workspaceFolder}/assembler", // 编译输出的可执行文件
            "args": [
                "${workspaceFolder}/spec.as",
                "${workspaceFolder}/spec.out",
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "C/C++: make assembler", // 启动调试前运行编译任务
            "preRunCommands": ["breakpoint set --name main"], // 在 main 函数处设置断点
        }
    ]
}
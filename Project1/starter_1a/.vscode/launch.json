// Linux launch.json
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Project 1a",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/assembler",
            "args": ["test.as", "test.out"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
		"setupCommands": [{
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }],
            "preLaunchTask": "C/C++: make assembler"
        }
    ]
}

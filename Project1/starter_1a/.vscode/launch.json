{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug P1_a",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/assembler.exe", // 编译输出的可执行文件
            "args": [
                "${workspaceFolder}/spec.as",
                "${workspaceFolder}/spec.out",
            ],
            "stopAtEntry": false, // 是否在程序入口处停下来
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false, // 是否打开外部控制台
            "MIMode": "gdb", // 使用 GDB 调试器
            "miDebuggerPath": "c://msys64//mingw64//bin//gdb.exe", // 调试器路径
            "preLaunchTask": "build program", // 启动调试前运行编译任务
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}